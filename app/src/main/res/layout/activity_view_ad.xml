<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.ViewAdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/brandcolor"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/adimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/blogo"
                android:layout_margin="2dp"
                android:background="@color/white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/adtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Ad Title"
            android:textSize="30sp"
            android:fontFamily="@font/blinkersemibold"
            android:textColor="@color/brandcolor"/>
        <TextView
            android:id="@+id/adrent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Rent"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>
        <TextView
            android:id="@+id/adlocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Location"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>
        <TextView
            android:id="@+id/adcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Category"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>
        <TextView
            android:id="@+id/addescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="User Detail"
            android:textSize="25sp"
            android:fontFamily="@font/blinkersemibold"
            android:textColor="@color/brandcolor"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Rent"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>

        <TextView
            android:id="@+id/useremail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Location"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>

        <TextView
            android:id="@+id/usermobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Location"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/blinkerregular"
            android:textColor="@color/brandcolor"/>

        //Button
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnwishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Wishlist"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/buttoncornerbrand"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/blinkerbold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Comments"
            android:textSize="25sp"
            android:fontFamily="@font/blinkersemibold"
            android:textColor="@color/brandcolor"
            android:gravity="center_horizontal"/>



        //EditText
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/brandcolor"
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/brandcolor"
            app:hintTextColor="@color/brandcolor">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Type you comment"
                android:textColorHint="@color/brandcolor"
                android:textColor="@color/brandcolor"
                android:textSize="18sp"
                android:fontFamily="@font/blinkerregular"/>
        </com.google.android.material.textfield.TextInputLayout>

        //Button
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btncomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/buttoncornerbrand"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/blinkerbold"
            android:layout_marginBottom="15dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>