<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.fragments.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //Ad Title
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/brandcolor"
            android:layout_margin="15dp"
            android:textColorHint="@color/brandcolor"
            app:hintTextColor="@color/brandcolor">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Search Room"
                android:textColorHint="@color/brandcolor"
                android:textColor="@color/brandcolor"
                android:textSize="18sp"
                android:fontFamily="@font/blinkersemibold"/>
        </com.google.android.material.textfield.TextInputLayout>

        //Button
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/buttoncornerbrand"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/blinkerbold"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        //Category
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Search Result"
            android:textColor="@color/brandcolor"
            android:fontFamily="@font/blinkerbold"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:id="@+id/llbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/brandcolor">

                <TextView
                    android:id="@+id/tvadtitile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="Ad Title"
                    android:textSize="19sp"
                    android:fontFamily="@font/blinkersemibold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/brandcolor">
                <ImageView
                    android:id="@+id/ivimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/blogo"
                    android:layout_margin="2dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/brandcolor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="Rent"
                    android:textSize="17sp"
                    android:fontFamily="@font/blinkerregular"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>